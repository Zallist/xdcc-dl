import argparse
from xdcc_dl.pack_searchers.PackSearcher import PackSearcher


def main():
    """
    Conducts a XDCC pack search
    :return: None
    """

    parser = argparse.ArgumentParser()
    parser.add_argument("search_term", help="The term to search for")
    parser.add_argument("search_engine",
                        choices=PackSearcher.get_available_pack_searchers(),
                        help="The Search Engine to use")
    args = parser.parse_args()

    results = PackSearcher.procedure_map[args.search_engine](args.search_term)

    for result in results:
        print(result)


if __name__ == "__main__":
    main()
